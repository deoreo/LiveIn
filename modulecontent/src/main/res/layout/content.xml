<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:fitsSystemWindows="true"
    tools:context=".Activity.Content">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:paddingTop="40dp"
            android:layout_height="wrap_content">
            <TextView
                android:text=" CUACA"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>


       <LinearLayout
           android:layout_width="match_parent"
           android:paddingTop="30dp"
           android:layout_height="wrap_content">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />

       </LinearLayout>










        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/btn_entertaiment"
                        android:layout_width="107dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_button"
                        android:drawablePadding="10dp"
                        android:drawableTop="@drawable/entertainment"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:layout_margin="5dp"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:text="ENTERTAIMENT">
                    </Button>

                    <Button
                        android:id="@+id/btn_dining"
                        android:layout_width="107dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_button"
                        android:drawablePadding="10dp"
                        android:drawableTop="@drawable/dining"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:layout_margin="5dp"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:text="Dining">
                    </Button>

                    <Button
                        android:id="@+id/btn_accomodation"
                        android:layout_width="107dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_button"
                        android:drawablePadding="10dp"
                        android:drawableTop="@drawable/accomodation"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:layout_margin="5dp"
                        android:textSize="11sp"
                        android:textColor="@android:color/white"
                        android:text="Accomodation">
                    </Button>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/btn_shopping"
                        android:background="@drawable/border_button"
                        android:drawablePadding="10dp"
                        android:drawableTop="@drawable/shopping"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:layout_margin="5dp"
                        android:textSize="11sp"
                        android:textColor="@android:color/white"
                        android:text="Shopping">
                    </Button>

                    <Button
                        android:id="@+id/btn_transportation"
                        android:background="@drawable/border_button"
                        android:drawablePadding="10dp"
                        android:drawableTop="@drawable/transportation"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:layout_margin="5dp"
                        android:textSize="11sp"
                        android:textColor="@android:color/white"
                        android:text="Transportation">
                    </Button>

                    <Button
                        android:id="@+id/btn_gallery"
                        android:background="@drawable/border_button"
                        android:drawablePadding="10dp"
                        android:drawableTop="@drawable/gallery"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:layout_margin="5dp"
                        android:textSize="11sp"
                        android:textColor="@android:color/white"
                        android:text="Gallery">
                    </Button>
                </TableRow>

            </TableLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btn_call_tbd"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@color/red"
                android:drawablePadding="15sp"
                android:drawableLeft="@drawable/call"
                android:layout_margin="5dp"
                android:paddingRight="22dp"
                android:paddingLeft="22dp"
                android:text="Call (TBD)"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                style="@style/Widget.AppCompat.Button.Borderless">
            </Button>

             <Button
                android:id="@+id/btn_discount_coupon"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@android:color/white"
                android:layout_margin="5dp"
                android:paddingRight="22dp"
                android:paddingLeft="22dp"
                android:text="Discount Coupon"
                android:textColor="@color/red"
                android:textStyle="bold"
                style="@style/Widget.AppCompat.Button.Borderless">
            </Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LippoCikarang.com Social Media"
                android:paddingTop="16dp"
                android:layout_marginRight="16dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>

            <ImageButton
                android:id="@+id/btn_youtube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/youtube"
                android:background="@android:color/transparent"
                android:layout_marginRight="16dp"/>

            <ImageButton
                android:id="@+id/btn_instagram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/instagram"
                android:background="@android:color/transparent" />

        </LinearLayout>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/drawer" />

</android.support.v4.widget.DrawerLayout>