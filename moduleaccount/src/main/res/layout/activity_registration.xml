<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.login.Activity.Registration">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:ems="10"
                android:text="CREATE YOUR ACCOUNT"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatar_register"
                android:layout_width="120dip"
                android:layout_height="120dip"
                android:layout_alignTop="@+id/textView"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="25dp"
                android:elevation="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ava_default"
                app:border_color="#FF000000" />

            <EditText
                android:id="@+id/fullname"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="#e6e7e8"
                android:hint="Full Name"
                android:singleLine="true"
                android:paddingLeft="17dp" />

            <Spinner
                style="@style/spinner_style2"
                android:id="@+id/spinner_gender"
                android:layout_width="match_parent"
                android:layout_weight="0.6"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:entries="@array/jk_array"/>

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="5dp"
                android:background="#e6e7e8"
                android:ems="10"
                android:hint="Phone"
                android:inputType="phone"
                android:paddingLeft="17dp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="#e6e7e8"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingLeft="17dp" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="#e6e7e8"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="17dp" />

            <EditText
                android:id="@+id/password2"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="#e6e7e8"
                android:ems="10"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:paddingLeft="17dp" />

            <Spinner
                style="@style/spinner_style"
                android:id="@+id/spinner_category"
                android:layout_width="200dp"
                android:layout_weight="0.6"
                android:layout_marginRight="4dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:entries="@array/l_array"/>

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="?android:attr/selectableItemBackground"
                android:singleLine="false"
                android:text="I agree to Term of Used and Privacy Policy"
                android:textColor="#ffffff"
                android:theme="@style/MyCheckBox"/>

            <Button
                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/border"
                android:text="Start Now"
                android:textColor="#ffffff"
                android:textSize="25dp" />

        </LinearLayout>
    </RelativeLayout>
</ScrollView>