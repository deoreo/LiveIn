<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android=" http://schemas.android.com/apk/res/android" xmlns:android1="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient
                        android1:angle="90"
                        android1:endColor="#e6e7e8"
                        android1:startColor="#e6e7e8"
                        android1:type="linear" />

                    <corners
                        android1:radius="0dp" />

                    <padding
                        android1:bottom="3dp"
                        android1:left="3dp"
                        android1:right="3dp"
                        android1:top="3dp" />
                </shape>
            </item>
            <item>
                <bitmap
                    android1:gravity="bottom|right"
                    android1:src="@drawable/arrow_down"/>
            </item>
        </layer-list>
    </item>

</selector>
